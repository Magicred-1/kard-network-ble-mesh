{
  "name": "@magicred-1/ble-mesh",
  "version": "1.2.2",
  "description": "BLE Mesh networking library for React Native with seamless permissions",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "clean": "del-cli android/build lib",
    "build": "npm run clean && bob build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "publish:npm": "bash scripts/build-and-publish.sh",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release": "npm run build && npm run publish:npm"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "bluetooth",
    "ble",
    "mesh",
    "p2p",
    "kard"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Magicred-1/kard-network-ble-mesh.git"
  },
  "author": {
    "name": "rrigoni",
    "email": "rrigoni@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Magicred-1/kard-network-ble-mesh/issues"
  },
  "homepage": "https://github.com/Magicred-1/kard-network-ble-mesh#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "del-cli": "^5.0.0",
    "jest": "^29.7.0",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-builder-bob": "^0.23.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
